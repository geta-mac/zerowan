<div class="container">
  <h1>投稿画面</h1>
    <%= form_with model: @pet do |f| %>
      <div class="form-group row">
      <%= f.label :category, "", class: "col-md-5 col-form-label text-md-left" do %>
        カテゴリー
      <% end %>
        <div class="col-md-7">

        <%= f.select :category,
          [["犬","犬"],["猫","猫"],["その他","その他"]],
          include_blank: "選択してください"
          %>
          <%= f.collection_select(:animal_type, PetType.all, :id, :name, prompt: "選択してください") %>
        </div>
      </div>
    <hr>
      <div class="form-group row">
        <%= f.label :avairable_area,
          "",
          class: "col-md-5 col-form-label text-md-left" do %>
          受け渡し地域
        <% end %>
        <div class="col-md-7">
        <%= f.collection_select(:avairable_area, Prefecture.all, :id, :name, prompt: "選択してください") %>
        </div>
      </div>
    <hr>
      <div class="form-group row">
        <%= f.label :name, "", class: "col-md-5 col-form-label text-md-left" do %>
          名前
        <% end %>
        <div class="col-md-7">
        <%=f.text_field :name,
          class: "form-control zerowan-login-input",
          autocomplete: "name"
          %>
        </div>
      </div>
    <hr>
      <div class="form-group row">
        <%= f.label :gender, "", class: "col-md-5 col-form-label text-md-left" do %>
          性別
        <% end %>
        <div class="col-md-7 mt-1">
        <%= f.select :gender,
          [["オス",1],["メス",2],["その他",3],["不明",4]],
          include_blank: "選択してください"
          %>
        </div>
      </div>
    <hr>
      <div class="form-group row">
        <%= f.label :name,
          "castration",
          class: "col-md-5 col-form-label text-md-left" do %>
          去勢・避妊手術
        <% end %>
        <div class="col-md-7">
          <%= f.radio_button :castration, :true %>
          <%= f.label :castration, "有り", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :castration, :false %>
          <%= f.label :castration, "無し", {value: :false, style: "display: inline-block;"} %>
        </div>
      </div>
    <hr>
      <div class="form-group row">
        <%= f.label :name, "", class: "col-md-5 col-form-label text-md-left" do %>
          年齢
        <% end %>
        <div class="col-md-7">
        <%= f.select :age, [
          ["~1ヶ月","~1ヶ月"],
          ["~3ヶ月","1~3ヶ月"],
          ["~6ヶ月","3~6ヶ月"],
          ["~1歳","6ヶ月~1歳"],
          ["~1歳6ヶ月","1歳~1歳6ヶ月"],
          ["~2歳","1歳6ヶ月~2歳"],
          ["~3歳","2歳~3歳"],
          ["~4歳","3歳~4歳"],
          ["~5歳","4歳~5歳"],
          ["それ以上","5歳~"],
        ],
        include_blank: "選択してください"
          %>
        </div>
      </div>
    <hr>
      <div class="form-group row">
        <%= f.label :character, "", class: "col-md-5 col-form-label text-md-left" do %>
          性格
        <% end %>
        <div class="col-md-7">
          <%= f.select :character,
            [["やんちゃ","やんちゃ"],["大人しい","大人しい"]],
            include_blank: "選択してください"
            %>
        </div>
      </div>
    <hr>
      <div class="form-group row">
        <%= f.label :description,
          "",
          class:
          "col-md-5 col-form-label text-md-left" do %>
          コメント
        <% end %>
        <div class="col-md-7">
        <%=f.text_field :description,
          class: "form-control zerowan-login-input"
          %>
        </div>
      </div>
    <hr>
      <div class="form-group row">
        <%= f.label :name, "", class: "col-md-5 col-form-label text-md-left" do %>
          画像
        <% end %>
        <div class="col-md-7">
        </div>
      </div>
    <hr>
      <div class="form-group row">
        <%= f.label :name, "", class: "col-md-5 col-form-label text-md-left" do %>
          動画
        <% end %>
        <div class="col-md-7">
        </div>
      </div>
    <hr>
      <div class='btn-toolbar w-100' >
        <button type="button"
          class="btn btn-outline-dark col-6"
          style="background-color:white"
          >
          <%= link_to("戻る", pets_path, {class: "btn-style-change"}) %>
        </button>
        <button type="submit" class="btn submit-button btn-success col-6">
          投稿する
        </button>
      </div>
  <% end %>
