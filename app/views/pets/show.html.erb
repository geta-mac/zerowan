<div>
  <div class="image_background">
    <div class="pet_image_background">
      <div class="pet_image">
        <%= image_tag @pet.image1.url %>
      </div>
      <div class="pet_image">
        <%= image_tag @pet.image2.url %>
      </div>
      <div class="pet_image">
        <%= image_tag @pet.image3.url %>
      </div>
      <div class="pet_image">
        <%= image_tag @pet.image4.url %>
      </div>
    </div>
  </div>
  <div class="pet_content_background">
  <ul>
    <li>名前：<%= @pet.name %></li>
    <li>年齢：<%= @pet.age %></li>
    <li>去勢有無：<%= @pet.castration %></li>
    <li>種類：<%= @pet.category %></li>
    <li>性格：<%= @pet.character %></li>
    <li>性別：<%= @pet.gender %></li>
    <li>コメント：<%= @pet.description %></li>
  </ul>

  <br>
  <br>

  <%= link_to edit_pet_path(@pet) do %>
    <button type="button" class="btn btn-secondary btn-position button-design" >
      編集
    </button>
  <% end %>
  <br>

  <%= link_to '/pets' do %>
    <button type="button" class="btn btn-outline-dark btn-position2 button-design2" >
      戻る
    </button>
  <% end %>
  <%= link_to(pet_path(@pet),
              { method: :delete,
              data: {confirm: '本当に削除してもいいですか?'},
              class: "button-design"}) do
    %>
    <button type="button" class="btn btn-danger btn-position3" >
      削除
    </button>
  <% end %>
  </div>
</div>
